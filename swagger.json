{
  "swagger": "2.0",
  "info": {
    "title": "Product API",
    "description": "API для управления продуктами",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "schemes": [
    "http"
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Получить список продуктов",
        "responses": {
          "200": {
            "description": "Список продуктов успешно получен"
          }
        }
      },
      "post": {
        "summary": "Создать новый продукт",
        "responses": {
          "201": {
            "description": "Продукт успешно создан"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Получить информацию о продукте по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID продукта"
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о продукте успешно получена"
          }
        }
      },
      "put": {
        "summary": "Обновить информацию о продукте по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID продукта"
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о продукте успешно обновлена"
          }
        }
      },
      "delete": {
        "summary": "Удалить продукт по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID продукта"
          }
        ],
        "responses": {
          "204": {
            "description": "Продукт успешно удалён"
          }
        }
      }
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Уникальный идентификатор продукта"
        },
        "title": {
          "type": "string",
          "description": "Название продукта"
        },
        "count": {
          "type": "integer",
          "description": "Стоимость продукта"
        },
        "description": {
          "type": "string",
          "description": "Описание продукта"
        },
        "image": {
          "type": "string",
          "description": "URL изображения продукта"
        },
        "cruiseDate": {
          "type": "string",
          "description": "даты начало и окончание круиза"
        }
      }
    }
  }
}
